<!--
theme name:    Colorful (Simplified)
artwork by:    viking (https://forums.launchbox-app.com/profile/70421-viking/)
ported from:   https://forums.launchbox-app.com/files/file/2081-colorful-bigbox-theme/
ported by:     Anthony Caccese
license:       creative commons CC-BY-NC-SA
-->
<theme defaultTransition="slide">
   <formatVersion>7</formatVersion>

   <!-- System Metadata -->
   <include>./_inc/systems/metadata-global/_default.xml</include>
   <include>./_inc/systems/metadata-global/${system.theme}.xml</include>
   <include>./_inc/systems/metadata-custom/_default.xml</include>
   <include>./_inc/systems/metadata-custom/${system.theme}.xml</include>

   <!-- Distribution -->
   <subset name="distribution" displayName="Distribution">
      <include name="batocera" displayName="Batocera" />
      <include name="retrobat" displayName="Retrobat" />
      <include name="jelos" displayName="JELOS" />
   </subset>

   <!-- Variables -->
   <variables>
      <fontBold>./_inc/fonts/Gilroy-Bold.ttf</fontBold>
      <fontRegular>./_inc/fonts/Oxygen-Regular.ttf</fontRegular>
      <fontLight>./_inc/fonts/Gilroy-Light.ttf</fontLight>
      <menuFontBold>./_inc/fonts/Oxygen-Bold.ttf</menuFontBold>
      <menuFontLight>./_inc/fonts/Oxygen-Light.ttf</menuFontLight>
      <menuFontRegular>./_inc/fonts/Oxygen-Regular.ttf</menuFontRegular>
      <spacerImage>./_inc/images/space.png</spacerImage>
      <distributionPath ifSubset="distribution:retrobat">~/.emulationstation/</distributionPath><!-- RetroBat\emulationstation\.emulationstation\ -->
      <distributionPath ifSubset="distribution:jelos">~/roms/jelos/</distributionPath><!-- storage/roms/jelos/ -->
      <distributionPath ifSubset="distribution:batocera">./../../</distributionPath><!-- userdata/ -->
      <themeCustomizationsPath>${distributionPath}theme-customizations/colorful-simplified/</themeCustomizationsPath>
   </variables>

   <!-- Aspect Ratio -->
   <subset name="aspect-ratio" displayName="Aspect Ratio">
      <include name="16-9" displayName="16:9" />
      <!--<include name="16-10" displayName="16:10" />
      <include name="4-3" displayName="4:3" />
      <include name="3-2" displayName="3:2" />
      <include name="5-3" displayName="5:3" />-->
      <include name="1-1" displayName="1:1" />
   </subset>

   <!-- Color Scheme -->
   <subset name="background-color" displayName="Background Color">
      <include name="colorful" displayName="Colorful" />
      <include name="dark" displayName="Dark" />
      <include name="light" displayName="Light" />
   </subset>
   <include>./colors.xml</include>
   
   <!-- Help System: Swap A/B -->
   <subset ifSubset="distribution:jelos" name="swap-a-b" displayName="Switch A &amp; B Buttons in EmulationStation">
      <include name="off" displayName="Off" />
      <include name="on" displayName="On" />
   </subset>

   <view name="screen">
      <controllerActivity name="controllerActivity">
         <visible>false</visible>
      </controllerActivity>
      <text name="clock">
         <pos>1 1</pos>
      </text>
      <batteryIndicator name="batteryIndicator">
         <color>${batteryIndicatorColor}</color>
         <itemSpacing>0</itemSpacing>
         <full>./_inc/images/battery-100-vertical.svg</full>
         <at75>./_inc/images/battery-75-vertical.svg</at75>
         <at50>./_inc/images/battery-50-vertical.svg</at50>
         <at25>./_inc/images/battery-25-vertical.svg</at25>
         <empty>./_inc/images/battery-0-vertical.svg</empty>
         <incharge>./_inc/images/battery-charging-vertical.svg</incharge>
         <networkIcon>./_inc/images/wifi-vertical.svg</networkIcon>
      </batteryIndicator>
   </view>

   <view name="system,basic,detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <zIndex>0</zIndex>
         <color>000000</color>
      </image>
      <text name="systemLabel" extra="true">
         <fontPath>${fontBold}</fontPath>
         <color>${systemLabelColor}</color>
         <zIndex>5</zIndex>
      </text>
      <text name="systemName" extra="true">
         <fontPath>${fontBold}</fontPath>
         <color>${systemNameColor}</color>
         <text>${systemName}</text>
         <verticalAlignment>top</verticalAlignment>
         <zIndex>5</zIndex>
      </text>
      <helpsystem name="help">
         <iconColor>${helpIconColor}</iconColor>
         <textColor>${helpTextColor}</textColor>
         <iconUpDown>./_inc/images/help-dpad-updown.svg</iconUpDown>
         <iconLeftRight>./_inc/images/help-dpad-leftright.svg</iconLeftRight>
         <iconUpDownLeftRight>./_inc/images/help-dpad-updownleftright.svg</iconUpDownLeftRight>
         <iconA>./_inc/images/help-button-east.svg</iconA>
         <iconB>./_inc/images/help-button-south.svg</iconB>
         <iconA ifSubset="distribution:jelos,swap-a-b:true">./_inc/images/help-button-east.svg</iconA>
         <iconB ifSubset="distribution:jelos,swap-a-b:true">./_inc/images/help-button-south.svg</iconB>
         <iconA ifSubset="distribution:jelos,swap-a-b:false">./_inc/images/help-button-south.svg</iconA>
         <iconB ifSubset="distribution:jelos,swap-a-b:false">./_inc/images/help-button-east.svg</iconB>
         <iconX>./_inc/images/help-button-north.svg</iconX>
         <iconY>./_inc/images/help-button-west.svg</iconY>
      </helpsystem>
   </view>

   <view name="system">
      <image name="systemBackground" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <zIndex>1</zIndex>
         <color>${systemBackgroundColor}</color>
      </image>
      <image name="logo">
         <path>./_inc/systems/images/_default.webp</path>
         <path>./_inc/systems/images/${system.theme}.webp</path>
      </image>
      <carousel name="systemcarousel">
         <color>00000000</color>
         <type>horizontal</type>
         <logoScale>1</logoScale>
         <logoSize>1 1</logoSize>
         <maxLogoCount>1</maxLogoCount>
         <scrollSound>./_inc/sounds/scroll.wav</scrollSound>
         <defaultTransition>instant</defaultTransition>
         <zIndex>2</zIndex>
      </carousel>
      <text name="systemDescription" extra="true">
         <fontPath>${fontLight}</fontPath>
         <verticalAlignment>top</verticalAlignment>
         <color>${systemDescriptionColor}</color>
         <text>${systemDescription}</text>
         <autoScroll>vertical</autoScroll>
         <zIndex>5</zIndex>
      </text>
      <text name="systemInfo">
         <alignment>left</alignment>
         <fontPath>${fontBold}</fontPath>
         <lineSpacing>1</lineSpacing>
         <color>${systemGameCountColor}</color>
         <zIndex>5</zIndex>
      </text>
   </view>

   <view name="basic,detailed,video">
      <image name="gamelistBackground" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <zIndex>1</zIndex>
         <color>${systemBackgroundColor}</color>
      </image>
      <text name="logoText">
         <pos>1 1</pos>
      </text>
      <textlist name="gamelist">
         <origin>0 0</origin>
         <alignment>left</alignment>
         <fontPath>${fontBold}</fontPath>
         <selectorColor>${gamelistSelectorColor}</selectorColor>
         <primaryColor>${gamelistPrimaryColor}</primaryColor>
         <secondaryColor>${gamelistSecondaryColor}</secondaryColor>
         <selectedColor>${gamelistSelectedColor}</selectedColor>
         <horizontalMargin>0.009</horizontalMargin>
         <scrollSound>./_inc/sounds/scroll.wav</scrollSound>
      </textlist>
   </view>

   <view name="basic">
      <image name="system-artwork" extra="true">
         <origin>0.5 0.5</origin>
         <path>./_inc/systems/images/_default.webp</path>
         <path>./_inc/systems/images/${system.theme}.webp</path>
      </image>
   </view>

   <view name="detailed,video">
      <text name="md_lbl_rating,md_lbl_developer,md_developer,md_lbl_publisher,md_publisher,md_lbl_playcount,md_playcount,md_lbl_lastplayed,md_lbl_players,md_players,md_lbl_releasedate,md_lbl_genre,md_genre,md_description,md_name,md_lbl_gametime,md_gametime">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <fontPath>${fontBold}</fontPath>
         <alignment>left</alignment>
         <color>ffffff</color>
         <forceUppercase>true</forceUppercase>
      </text>
      <datetime name="md_releasedate,md_lastplayed">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <fontPath>${fontBold}</fontPath>
         <color>ffffff</color>
         <alignment>left</alignment>
         <forceUppercase>true</forceUppercase>
         <format>%Y-%m-%d</format>
      </datetime>
      <rating name="md_rating">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <color>ffffff</color>
         <filledPath>./_inc/images/icon-star-filled.svg</filledPath>
         <unfilledPath>./_inc/images/icon-star-unfilled.svg</unfilledPath>
      </rating>
      <image name="md_releasedate_icon,md_players_icon,md_developer_icon,md_publisher_icon,md_genre_icon,md_lastplayed_icon,md_playcount_icon,md_gametime_icon" extra="true">
         <origin>0 0.5</origin>
         <pos>1 1</pos>
         <color>ffffff</color>
      </image>
      <image name="md_releasedate_icon">
         <path>./_inc/images/icon-releasedate.svg</path>
      </image>
      <image name="md_players_icon">
         <path>./_inc/images/icon-players.svg</path>
      </image>
      <image name="md_playcount_icon">
         <path>./_inc/images/icon-playcount.svg</path>
      </image>
      <image name="md_gametime_icon">
         <path>./_inc/images/icon-gametime.svg</path>
      </image>
      <image name="md_lastplayed_icon">
         <path>./_inc/images/icon-lastplayed.svg</path>
      </image>
      <image name="md_genre_icon">
         <path>./_inc/images/icon-genre.svg</path>
      </image>
      <image name="md_developer_icon">
         <path>./_inc/images/icon-developer.svg</path>
      </image>
      <image name="md_publisher_icon">
         <path>./_inc/images/icon-publisher.svg</path>
      </image>
      <text name="md_description">
         <origin>0 0</origin>
         <fontPath>${fontRegular}</fontPath>
         <color>ffffff</color>
         <forceUppercase>false</forceUppercase>
         <fontPath>${fontRegular}</fontPath>
      </text>
   </view>

   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <zIndex>3</zIndex>
      </image>
   </view>

   <view name="video">
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <delay>2</delay>
         <effect>none</effect>
         <showSnapshotDelay>true</showSnapshotDelay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <zIndex>3</zIndex>
      </video>
   </view>

   <view name="menu">
      <menuText name="menutitle">
         <fontPath>${menuFontBold}</fontPath>
         <fontSize>0.03</fontSize>
         <color>ffffff</color>
      </menuText>
      <menuText name="menufooter">
         <fontPath>${menuFontLight}</fontPath>
         <fontSize>0.025</fontSize>
         <color>ffffff77</color>
      </menuText>
      <menuText name="menutext">
         <fontPath>${menuFontBold}</fontPath>
         <fontSize>0.035</fontSize>
         <color>ffffff77</color>
         <separatorColor>ffffff11</separatorColor>
         <selectedColor>ffffff</selectedColor>
      </menuText>
      <menuTextSmall name="menutextsmall">
         <fontPath>${menuFontBold}</fontPath>
         <fontSize>0.0325</fontSize>
         <color>ffffff77</color>
      </menuTextSmall>
      <menuGroup name="menugroup">
         <fontPath>${menuFontRegular}</fontPath>
         <fontSize>0.0325</fontSize>
         <color>ffffff</color>
         <separatorColor>ffffff99</separatorColor>
         <backgroundColor>00000000</backgroundColor>
         <lineSpacing>2.5</lineSpacing>
      </menuGroup>
      <menuTextEdit name="menutextedit">
         <inactive>./_inc/images/menu-textinput.png</inactive>
         <active>./_inc/images/menu-textinput-active.png</active>
      </menuTextEdit>
      <menuBackground name="menubg">
         <color>111111</color>
         <cornerSize>20 20</cornerSize>
      </menuBackground>
      <menuIcons name="menuicons">
         <iconSystem>./_inc/images/menu-icon-system.svg</iconSystem>
         <iconUpdates>./_inc/images/menu-icon-update.svg</iconUpdates>
         <iconControllers>./_inc/images/menu-icon-controller.svg</iconControllers>
         <iconGames>./_inc/images/menu-icon-games.svg</iconGames>
         <iconUI>./_inc/images/menu-icon-ui.svg</iconUI>
         <iconSound>./_inc/images/menu-icon-sound.svg</iconSound>
         <iconNetwork>./_inc/images/menu-icon-network.svg</iconNetwork>
         <iconScraper>./_inc/images/menu-icon-scraper.svg</iconScraper>
         <iconAdvanced>./_inc/images/menu-icon-advanced.svg</iconAdvanced>
         <iconQuit>./_inc/images/menu-icon-quit.svg</iconQuit>
         <iconRetroachievements>./_inc/images/menu-icon-achievements.svg</iconRetroachievements>
         <iconKodi>./_inc/images/menu-icon-kodi.svg</iconKodi>
         <iconRestart>./_inc/images/menu-icon-restart.svg</iconRestart>
         <iconShutdown>./_inc/images/menu-icon-shutdown.svg</iconShutdown>
         <iconFastShutdown>./_inc/images/menu-icon-shutdown.svg</iconFastShutdown>
      </menuIcons>
   </view>

   <!-- Customizations -->
   <!-- System View Video -->
   <include>${themeCustomizationsPath}system-view-video/system-view-video.xml</include>
   <view name="system">
      <video ifSubset="background-color:colorful,system-view-video:on" name="systemVideo" extra="true">
         <effect>none</effect>
         <showSnapshotNoVideo>false</showSnapshotNoVideo>
         <showSnapshotDelay>false</showSnapshotDelay>
         <path>${themeCustomizationsPath}system-view-video/videos/${system.theme}.mp4</path>
         <delay>1</delay>
         <zIndex>2</zIndex>
      </video>
   </view>

   <!-- Aspect Ratio -->
   <include ifSubset="aspect-ratio:16-9">./aspect-ratio-16-9.xml</include>
   <!--<include ifSubset="aspect-ratio:16-10">./aspect-ratio-16-10.xml</include>
   <include ifSubset="aspect-ratio:4-3">./aspect-ratio-4-3.xml</include>
   <include ifSubset="aspect-ratio:3-2">./aspect-ratio-3-2.xml</include>
   <include ifSubset="aspect-ratio:5-3">./aspect-ratio-5-3.xml</include> -->
   <include ifSubset="aspect-ratio:1-1">./aspect-ratio-1-1.xml</include>

</theme>