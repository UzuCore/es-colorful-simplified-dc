      <gameDescription>000000</gameDescription>
      <gameMetadataLabel>777777</gameMetadataLabel>
      <gameMetadata>333333</gameMetadata>
      <gameMetadataBackground>./_inc/images/metadata-background-light.svg</gameMetadataBackground>
   </variables>
   <variables ifSubset="background-color:dark">
      <batteryIndicatorColor>ffffff99</batteryIndicatorColor>
      <systemBackgroundColor>111111</systemBackgroundColor>
      <helpIconColor>ffffffaa</helpIconColor>
